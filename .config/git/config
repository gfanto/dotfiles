[user]
    name = Gianmarco Fantinuoli
    email = fanto-dev@hotmail.com

[credential]
    helper = cache --timeout=604800

[ui "color"]
    ui = always
[color]
    ui = true

[core]
    editor = nvim
    pager = delta
    autocrlf = input
    ;safecrlf = warn

[diff]
    algorithm = patience
    compactionHeuristic = true

[difftool]
    prompt = false

[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[merge]
    stat = true
    ; tool = nvimdiff
    tool = fugitive

[mergetool]
    prompt = true
    keepBackup = false

[mergetool "fugitive"]
  cmd = nvim -f -c \"Gvdiffsplit!\" \"$MERGED\"

[mergetool "fugitive!"]
  cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"

[mergetool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$MERGED\" \"$REMOTE\" -c 'wincmd l'"

[mergetool "vimdiff"]
    cmd = "vimdiff \"$LOCAL\" \"$MERGED\" \"$REMOTE\" -c 'wincmd l'"

[pull]
    rebase = true

[rebase]
    autoStash = true
    stat = true

[alias]
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    last = log -1 HEAD
    changes = diff @~..@
    squash = rebase -i HEAD~2
    amend = commit -a --amend
    cleanall = clean -fxfd
    tags = tag -l
    branches = branch -a
    remotes = remote -v

[push]
    default = current

[delta]
    line-numbers = true
    side-by-side = false

    file-modified-label = modified:

[interactive]
    diffFilter = delta --color-only

[url "git@github.com:"]
    insteadOf = https://github.com/

[include]
  path = ~/.config/git/sys_config
